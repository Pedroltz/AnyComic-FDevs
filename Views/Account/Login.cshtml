@{
    ViewData["Title"] = "Login - AnyComic";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Entrar</h2>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }

                    <form method="post" asp-controller="Account" asp-action="Login">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>

                        <div class="mb-3">
                            <label for="senha" class="form-label">Senha</label>
                            <input type="password" class="form-control" id="senha" name="senha" required>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="isAdmin" name="isAdmin" value="true">
                            <label class="form-check-label" for="isAdmin">
                                Entrar como Administrador
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Entrar</button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p>NÃ£o tem uma conta? <a asp-controller="Account" asp-action="Register">Registre-se aqui</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
