@{
    ViewData["Title"] = "Sign up - AnyComic";
}

<!-- Register Page - HotComics Style -->
<div class="page-container">
    <div class="row justify-content-center" style="margin-top: 60px;">
        <div class="col-lg-5 col-md-6">
            <div class="modal-content fade-in">
                <div class="modal-header">
                    <h2 class="modal-title w-100 text-center" style="font-size: 24px;">Create Account</h2>
                </div>
                <div class="modal-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }

                    <form method="post" asp-controller="Account" asp-action="Register">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="nome" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="nome" name="nome" placeholder="Enter your full name" required>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                        </div>

                        <div class="mb-3">
                            <label for="senha" class="form-label">Password</label>
                            <input type="password" class="form-control" id="senha" name="senha" placeholder="Create a password" required minlength="6">
                            <div class="form-text" style="color: #6c757d; font-size: 12px;">Password must be at least 6 characters.</div>
                        </div>

                        <div class="mb-3">
                            <label for="confirmarSenha" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="confirmarSenha" name="confirmarSenha" placeholder="Confirm your password" required minlength="6">
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Create Account</button>
                        </div>
                    </form>

                    <hr class="my-4" style="border-color: #dee2e6;">

                    <div class="text-center">
                        <p style="margin: 0; color: #6c757d; font-size: 14px;">
                            Already have an account?
                            <a asp-controller="Account" asp-action="Login" style="color: #ef2c2f; font-weight: 600; text-decoration: none;">
                                Sign in here
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
