@model AnyComic.Models.Banner

@{
    ViewData["Title"] = "Delete Banner - AnyComic";
}

<!-- Delete Banner - HotComics Style -->
<div class="page-container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="modal-content fade-in">
                <div class="modal-header" style="background-color: #f8d7da; border-bottom-color: #f5c6cb;">
                    <h2 class="modal-title w-100 text-center" style="font-size: 24px; color: #721c24;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: middle; margin-right: 10px;">
                            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                        </svg>
                        Delete Banner
                    </h2>
                </div>
                <div class="modal-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }

                    <div class="alert alert-warning" style="border-left: 4px solid #ffc107;">
                        <h5 style="font-weight: 600; margin-bottom: 10px;">Are you sure you want to delete this banner?</h5>
                        <p style="margin-bottom: 0; color: #856404;">This action cannot be undone. The banner will be permanently removed from the carousel.</p>
                    </div>

                    <div style="background-color: #f8f9fa; padding: 20px; border-radius: 8px; margin: 20px 0;">
                        <div class="mb-3">
                            <strong style="color: #6c757d; font-size: 13px; text-transform: uppercase; letter-spacing: 0.5px;">Title</strong>
                            <p style="font-size: 18px; font-weight: 600; color: #333; margin: 5px 0 0 0;">@Model.Titulo</p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Subtitulo))
                        {
                            <div class="mb-3">
                                <strong style="color: #6c757d; font-size: 13px; text-transform: uppercase; letter-spacing: 0.5px;">Subtitle</strong>
                                <p style="font-size: 16px; color: #333; margin: 5px 0 0 0;">@Model.Subtitulo</p>
                            </div>
                        }
                        <div class="mb-3">
                            <strong style="color: #6c757d; font-size: 13px; text-transform: uppercase; letter-spacing: 0.5px;">Image Preview</strong>
                            <div style="margin-top: 10px; border: 1px solid #dee2e6; border-radius: 4px; overflow: hidden;">
                                <img src="@Model.ImagemUrl" alt="@Model.Titulo" style="width: 100%; max-height: 150px; object-fit: contain; background-color: #fff;">
                            </div>
                        </div>
                        <div class="mb-3">
                            <strong style="color: #6c757d; font-size: 13px; text-transform: uppercase; letter-spacing: 0.5px;">Display Order</strong>
                            <p style="font-size: 16px; color: #333; margin: 5px 0 0 0;">@Model.Ordem</p>
                        </div>
                        <div>
                            <strong style="color: #6c757d; font-size: 13px; text-transform: uppercase; letter-spacing: 0.5px;">Status</strong>
                            <p style="font-size: 16px; margin: 5px 0 0 0;">
                                @if (Model.Ativo)
                                {
                                    <span style="color: #28a745; font-weight: 600;">Active</span>
                                }
                                else
                                {
                                    <span style="color: #6c757d; font-weight: 600;">Inactive</span>
                                }
                            </p>
                        </div>
                    </div>

                    <form method="post" asp-controller="Admin" asp-action="DeleteBanner" asp-route-id="@Model.Id">
                        @Html.AntiForgeryToken()
                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-danger flex-fill" style="background-color: #dc3545; border-color: #dc3545;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: text-top; margin-right: 5px;">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                                </svg>
                                Yes, Delete Banner
                            </button>
                            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-primary flex-fill">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: text-top; margin-right: 5px;">
                                    <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
                                </svg>
                                No, Go Back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
