@model AnyComic.Models.Manga

@{
    ViewData["Title"] = $"Edit {Model.Titulo} - AnyComic";
}

<!-- Edit Manga - HotComics Style -->
<div class="page-container">
    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @ViewBag.Success
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="row">
        <div class="col-lg-8 col-md-7">
            <div class="modal-content fade-in">
                <div class="modal-header">
                    <h2 class="modal-title w-100 text-center" style="font-size: 24px;">Edit Manga</h2>
                </div>
                <div class="modal-body">
                    <form method="post" asp-controller="Admin" asp-action="EditManga" asp-route-id="@Model.Id" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="DataCriacao" />
                        <input type="hidden" asp-for="ImagemCapa" />

                        <div class="mb-3">
                            <label asp-for="Titulo" class="form-label">Title *</label>
                            <input asp-for="Titulo" class="form-control" placeholder="Enter manga title" required>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Autor" class="form-label">Author *</label>
                            <input asp-for="Autor" class="form-control" placeholder="Enter author name" required>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label">Description *</label>
                            <textarea asp-for="Descricao" class="form-control" rows="5" placeholder="Enter manga description" required></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DataCriacao" class="form-label">Release Date *</label>
                            <input asp-for="DataCriacao" type="date" class="form-control" required>
                            <div class="form-text">Select the release date of the manga</div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ImagemCapa))
                        {
                            <div class="mb-3">
                                <label class="form-label">Current Cover</label>
                                <div style="border: 1px solid var(--border-color); border-radius: 4px; padding: 10px; background-color: var(--bg-light);">
                                    <img src="@Model.ImagemCapa" alt="@Model.Titulo" style="width: 100%; max-height: 300px; object-fit: contain; border-radius: 4px;">
                                </div>
                            </div>
                        }

                        <div class="mb-3">
                            <label for="imagemCapa" class="form-label">New Cover Image (optional)</label>
                            <input type="file" class="form-control" id="imagemCapa" name="imagemCapa" accept="image/*">
                            <div class="form-text">Leave blank to keep current cover.</div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary flex-fill">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: text-top; margin-right: 5px;">
                                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                                </svg>
                                Save Changes
                            </button>
                            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-primary flex-fill">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: text-top; margin-right: 5px;">
                                    <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
                                </svg>
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-5">
            <div class="modal-content fade-in">
                <div class="modal-header">
                    <h5 class="modal-title w-100 text-center">Information</h5>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <p style="margin: 0; color: var(--text-secondary); font-size: 13px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">Release Date</p>
                        <p style="margin: 5px 0 0 0; font-size: 16px; font-weight: 600; color: var(--text-primary);">@Model.DataCriacao.ToString("MM/dd/yyyy")</p>
                    </div>

                    <hr style="border-color: var(--border-color);">

                    <div class="d-grid gap-2">
                        <a asp-controller="Admin" asp-action="UploadPages" asp-route-id="@Model.Id" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: text-top; margin-right: 5px;">
                                <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
                                <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z"/>
                            </svg>
                            Manage Pages
                        </a>
                        <a asp-controller="Admin" asp-action="DeleteManga" asp-route-id="@Model.Id" class="btn btn-outline-primary" style="color: #dc3545; border-color: #dc3545;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: text-top; margin-right: 5px;">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                            </svg>
                            Delete Manga
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
