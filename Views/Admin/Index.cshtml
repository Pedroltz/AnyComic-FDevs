@model IEnumerable<AnyComic.Models.Manga>

@{
    ViewData["Title"] = "Administração - AnyComic";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">Painel Administrativo</h1>
        <div>
            <a asp-controller="Admin" asp-action="CreateManga" class="btn btn-success">Adicionar Mangá</a>
            <a asp-controller="Admin" asp-action="CreateAdmin" class="btn btn-primary">Criar Admin</a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Capa</th>
                        <th>Título</th>
                        <th>Autor</th>
                        <th>Páginas</th>
                        <th>Data</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var manga in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(manga.ImagemCapa))
                                {
                                    <img src="@manga.ImagemCapa" alt="@manga.Titulo" style="width: 50px; height: 70px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 50px; height: 70px; font-size: 10px;">
                                        Sem capa
                                    </div>
                                }
                            </td>
                            <td>@manga.Titulo</td>
                            <td>@manga.Autor</td>
                            <td>@manga.Paginas.Count</td>
                            <td>@manga.DataCriacao.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Admin" asp-action="EditManga" asp-route-id="@manga.Id" class="btn btn-sm btn-warning">Editar</a>
                                    <a asp-controller="Admin" asp-action="UploadPages" asp-route-id="@manga.Id" class="btn btn-sm btn-info">Páginas</a>
                                    <a asp-controller="Admin" asp-action="DeleteManga" asp-route-id="@manga.Id" class="btn btn-sm btn-danger">Excluir</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            <h4>Nenhum mangá cadastrado</h4>
            <p>Comece adicionando seu primeiro mangá!</p>
            <a asp-controller="Admin" asp-action="CreateManga" class="btn btn-success mt-3">Adicionar Mangá</a>
        </div>
    }
</div>
