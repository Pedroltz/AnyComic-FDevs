@model AnyComic.Models.UsuarioAdmin

@{
    ViewData["Title"] = "Edit Admin - AnyComic";
}

<!-- Edit Admin - HotComics Style -->
<div class="page-container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="modal-content fade-in">
                <div class="modal-header">
                    <h2 class="modal-title w-100 text-center" style="font-size: 24px;">Edit Administrator</h2>
                </div>
                <div class="modal-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }

                    <form method="post" asp-controller="Admin" asp-action="EditAdmin" asp-route-id="@Model.Id">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="nome" class="form-label">Name</label>
                            <input type="text" class="form-control" id="nome" name="nome" value="@Model.Nome" placeholder="Enter admin name" required>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="@Model.Email" placeholder="Enter admin email" required>
                        </div>

                        <hr class="my-4">

                        <div class="alert alert-info" style="font-size: 13px;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: text-top; margin-right: 5px;">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                            </svg>
                            Leave password fields empty to keep the current password
                        </div>

                        <div class="mb-3">
                            <label for="senha" class="form-label">New Password (optional)</label>
                            <input type="password" class="form-control" id="senha" name="senha" placeholder="Enter new password" minlength="6">
                            <div class="form-text" style="color: #6c757d; font-size: 12px;">Password must be at least 6 characters.</div>
                        </div>

                        <div class="mb-3">
                            <label for="confirmarSenha" class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control" id="confirmarSenha" name="confirmarSenha" placeholder="Confirm new password" minlength="6">
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary flex-fill">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: text-top; margin-right: 5px;">
                                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                                </svg>
                                Save Changes
                            </button>
                            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-primary flex-fill">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: text-top; margin-right: 5px;">
                                    <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
                                </svg>
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
