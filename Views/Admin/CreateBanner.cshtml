@{
    ViewData["Title"] = "Create Banner - AnyComic";
    var mangas = ViewBag.Mangas as List<AnyComic.Models.Manga>;
}

<!-- Create Banner - HotComics Style -->
<div class="page-container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="modal-content fade-in">
                <div class="modal-header">
                    <h2 class="modal-title w-100 text-center" style="font-size: 24px;">Create New Banner</h2>
                </div>
                <div class="modal-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }

                    <form method="post" asp-controller="Admin" asp-action="CreateBanner" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">Banner Type *</label>
                            <div class="d-flex gap-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="tipo" id="tipoImage" value="0" checked onchange="toggleBannerType()">
                                    <label class="form-check-label" for="tipoImage">Image</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="tipo" id="tipoShowcase" value="1" onchange="toggleBannerType()">
                                    <label class="form-check-label" for="tipoShowcase">Manga Showcase</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3" id="mangaSelectGroup" style="display: none;">
                            <label for="mangaId" class="form-label">Select Manga *</label>
                            <select class="form-select" id="mangaId" name="mangaId">
                                <option value="">-- Select a manga --</option>
                                @if (mangas != null)
                                {
                                    @foreach (var manga in mangas)
                                    {
                                        <option value="@manga.Id">@manga.Titulo â€” @manga.Autor</option>
                                    }
                                }
                            </select>
                            <div class="form-text">The manga's cover, title, author and description will be displayed on the banner</div>
                        </div>

                        <div class="mb-3" id="tituloGroup">
                            <label for="titulo" class="form-label" id="tituloLabel">Title *</label>
                            <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Enter banner title" required maxlength="100">
                            <div class="form-text" id="tituloHelpText" style="display: none;">Leave empty to use the manga title</div>
                        </div>

                        <div class="mb-3" id="subtituloGroup">
                            <label for="subtitulo" class="form-label">Subtitle (optional)</label>
                            <input type="text" class="form-control" id="subtitulo" name="subtitulo" placeholder="Enter banner subtitle" maxlength="200">
                        </div>

                        <div class="mb-3">
                            <label for="imagemFile" class="form-label" id="imageLabel">Banner Image *</label>
                            <input type="file" class="form-control" id="imagemFile" name="imagemFile" accept="image/*" required>
                            <div class="form-text" id="imageHelpText">Upload a banner image (JPG, PNG, GIF, WEBP - recommended size: 1920x600px)</div>
                        </div>

                        <div class="mb-3">
                            <label for="ordem" class="form-label">Display Order</label>
                            <input type="number" class="form-control" id="ordem" name="ordem" placeholder="0" required value="0" min="0">
                            <div class="form-text">Lower numbers appear first in the carousel</div>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="ativo" name="ativo" value="true" checked>
                            <label class="form-check-label" for="ativo">
                                Active (show in carousel)
                            </label>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary flex-fill">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: text-top; margin-right: 5px;">
                                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                                </svg>
                                Create Banner
                            </button>
                            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-primary flex-fill">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: text-top; margin-right: 5px;">
                                    <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
                                </svg>
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function toggleBannerType() {
        var isShowcase = document.getElementById('tipoShowcase').checked;
        var tituloInput = document.getElementById('titulo');
        var imagemInput = document.getElementById('imagemFile');

        document.getElementById('mangaSelectGroup').style.display = isShowcase ? 'block' : 'none';
        document.getElementById('subtituloGroup').style.display = isShowcase ? 'none' : 'block';

        // Title: optional for showcase, required for image
        document.getElementById('tituloLabel').textContent = isShowcase ? 'Title (optional)' : 'Title *';
        document.getElementById('tituloHelpText').style.display = isShowcase ? 'block' : 'none';
        tituloInput.required = !isShowcase;

        // Image: optional for showcase, required for image
        document.getElementById('imageLabel').textContent = isShowcase ? 'Background Image (optional)' : 'Banner Image *';
        document.getElementById('imageHelpText').textContent = isShowcase
            ? 'Leave empty to use the manga cover as background (blurred). Or upload a custom background image.'
            : 'Upload a banner image (JPG, PNG, GIF, WEBP - recommended size: 1920x600px)';
        imagemInput.required = !isShowcase;
    }
</script>
}
