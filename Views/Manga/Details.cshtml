@model AnyComic.Models.Manga

@{
    ViewData["Title"] = Model.Titulo;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImagemCapa))
            {
                <img src="@Model.ImagemCapa" class="img-fluid rounded shadow" alt="@Model.Titulo">
            }
            else
            {
                <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded" style="height: 500px;">
                    <span>Sem capa</span>
                </div>
            }
        </div>

        <div class="col-md-8">
            <h1 class="display-5">@Model.Titulo</h1>
            <p class="lead text-muted">Por @Model.Autor</p>

            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Descrição</h5>
                    <p class="card-text">@Model.Descricao</p>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Informações</h5>
                    <p class="mb-1"><strong>Páginas:</strong> @Model.Paginas.Count</p>
                    <p class="mb-0"><strong>Adicionado em:</strong> @Model.DataCriacao.ToString("dd/MM/yyyy")</p>
                </div>
            </div>

            <div class="d-grid gap-2">
                @if (Model.Paginas.Any())
                {
                    <a asp-controller="Manga" asp-action="Read" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">
                        Começar a Ler
                    </a>
                }
                else
                {
                    <button class="btn btn-secondary btn-lg" disabled>
                        Sem páginas disponíveis
                    </button>
                }

                @if (User.Identity?.IsAuthenticated == true)
                {
                    @if (ViewBag.IsFavorito == true)
                    {
                        <form method="post" asp-controller="Manga" asp-action="RemoveFavorito" asp-route-id="@Model.Id">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger btn-lg">
                                Remover dos Favoritos
                            </button>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-controller="Manga" asp-action="AddFavorito" asp-route-id="@Model.Id">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-success btn-lg">
                                Adicionar aos Favoritos
                            </button>
                        </form>
                    }
                }
            </div>
        </div>
    </div>
</div>
