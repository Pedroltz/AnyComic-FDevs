                    </div>
                </div>
            </div>
        </main>

        <!-- Bottom Controls -->
        <footer class="reader-footer" id="readerFooter">
            <div class="footer-controls">
                <button class="reader-btn" id="prevBtnFooter" onclick="previousPage()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
                    </svg>
                    <span class="btn-text">Previous</span>
                </button>
            </div>

            <div class="progress-bar-container">
                <div class="progress-bar-custom" id="progressBar" onclick="onProgressBarClick(event)">
                    <div class="progress-bar-fill" style="width: @((paginaAtual * 100.0 / totalPaginas).ToString("F2", System.Globalization.CultureInfo.InvariantCulture))%"></div>
                </div>
            </div>

            <div class="footer-controls">
                <button class="reader-btn reader-btn-primary" id="nextBtnFooter" onclick="nextPage()">
                    <span class="btn-text">Next</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
                    </svg>
                </button>
            </div>
        </footer>

        <!-- Keyboard Hint -->
        <div class="keyboard-hint">
            Use arrow keys to navigate
        </div>
    </div>

    <!-- Chapter Transition Modal -->
    <div class="chapter-modal-overlay" id="chapterModal">
        <div class="chapter-modal-card">
            <h2 id="chapterModalTitle"></h2>
            <p id="chapterModalText"></p>
            <div class="chapter-modal-buttons">
                <button class="chapter-modal-btn chapter-modal-btn-primary" id="chapterModalAction" onclick="chapterModalNavigate()"></button>
                <button class="chapter-modal-btn chapter-modal-btn-secondary" onclick="closeChapterModal()">Back</button>
            </div>
        </div>
    </div>

    <script>
        const mangaId = @ViewBag.MangaId;
        let currentPage = @paginaAtual;
        const totalPages = @totalPaginas;
        const currentChapterNum = @capituloAtual.NumeroCapitulo;
        const pageMap = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.PageMap));
        const hasNextChapter = @(proximoCapitulo != null ? "true" : "false");
        const hasPrevChapter = @(capituloAnterior != null ? "true" : "false");
        const nextChapterNum = @(proximoCapitulo != null ? proximoCapitulo.NumeroCapitulo : 0);
        const prevChapterNum = @(capituloAnterior != null ? capituloAnterior.NumeroCapitulo : 0);
        const nextChapterName = '@Html.Raw(proximoCapitulo != null ? System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(proximoCapitulo.NomeExibicao) : "")';
        const prevChapterName = '@Html.Raw(capituloAnterior != null ? System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(capituloAnterior.NomeExibicao) : "")';
        const currentChapterName = '@Html.Raw(System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(capituloAtual.NomeExibicao))';
        const mangaTitle = '@Html.Raw(System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(ViewBag.MangaTitulo))';
        const readBaseUrl = '@Url.Action("Read", "Manga")';

        let pendingChapterNav = null;

        function isMobile() {
            return window.matchMedia('(max-width: 768px)').matches;
        }

        // ===== READING MODE =====
        let readingMode = localStorage.getItem('readingMode') || 'single';

        const dualContainer = document.getElementById('dualPageContainer');
        const imgLeft = document.getElementById('mangaImageLeft');
        const imgRight = document.getElementById('mangaImageRight');

        function toggleReadingModeMenu(e) {
            e.stopPropagation();
            document.getElementById('readingModeMenu').classList.toggle('open');
        }

        document.addEventListener('click', function(e) {
            const menu = document.getElementById('readingModeMenu');
            if (menu && !e.target.closest('.reading-mode-wrapper')) {
                menu.classList.remove('open');
            }
        });

        function setReadingMode(mode) {
            readingMode = mode;
            localStorage.setItem('readingMode', mode);

            // Update active state in menu
            document.querySelectorAll('.reading-mode-option').forEach(opt => {
                opt.classList.toggle('active', opt.dataset.mode === mode);
            });

            document.getElementById('readingModeMenu').classList.remove('open');

            // Reset zoom before switching
            resetZoom();

            // Re-render current view
            updateDualPageDisplay();
        }

        function getPageStep() {
            if (readingMode === 'single') return 1;
            // In double mode, if we're on the last page and it's odd, step is still 1
            // Otherwise step 2
            return 2;
        }

        function getAlignedPage(pageNum) {
            // In double mode, pages are shown in pairs: 1-2, 3-4, 5-6...
            // Always align to odd page as the "base"
            if (readingMode === 'single') return pageNum;
            return pageNum % 2 === 0 ? pageNum - 1 : pageNum;
        }

        function updateDualPageDisplay() {
            if (readingMode === 'single') {
                // Single mode: show single image, hide dual container
                dualContainer.style.display = 'none';
                img.style.display = '';
                return;
            }

            // Double mode
            const alignedPage = getAlignedPage(currentPage);
            currentPage = alignedPage;

            const firstPageInfo = pageMap.find(p => p.pagina === alignedPage);
            const secondPageInfo = pageMap.find(p => p.pagina === alignedPage + 1);

            if (!firstPageInfo) return;

            // Hide single image, show dual container
            img.style.display = 'none';
            dualContainer.style.display = 'flex';

            // Set RTL mode
            dualContainer.classList.toggle('rtl-mode', readingMode === 'double-rtl');

            // Load images
            imgLeft.src = firstPageInfo.imagem;
            imgLeft.alt = 'Page ' + alignedPage;

            if (secondPageInfo) {
                imgRight.src = secondPageInfo.imagem;
                imgRight.alt = 'Page ' + (alignedPage + 1);
                imgRight.style.display = '';
            } else {
                // Last page is alone (odd total)
                imgRight.style.display = 'none';
            }

            // Track loading
            let loadCount = 0;
            const needed = secondPageInfo ? 2 : 1;
            showLoading();
            const onLoaded = () => {
                loadCount++;
                if (loadCount >= needed) hideLoading();
            };
            imgLeft.onload = onLoaded;
            if (secondPageInfo) imgRight.onload = onLoaded;

            // Update UI elements
            updatePageUI();
        }

        function updatePageUI() {
            const counter = document.querySelector('.page-counter');
            if (readingMode !== 'single') {
                const secondPage = currentPage + 1 <= totalPages ? currentPage + 1 : null;
                const pageText = secondPage
                    ? 'Pages ' + currentPage + '-' + secondPage + ' of ' + totalPages
                    : 'Page ' + currentPage + ' of ' + totalPages;
                if (counter) counter.textContent = currentChapterName + ' - ' + pageText;
                document.title = mangaTitle + ' - Pages ' + currentPage + (secondPage ? '-' + secondPage : '');
            } else {
                if (counter) counter.textContent = currentChapterName + ' - Page ' + currentPage + ' of ' + totalPages;
                document.title = mangaTitle + ' - Page ' + currentPage;
            }

            document.getElementById('pageSelector').value = currentPage;

            const progressPercent = (currentPage * 100.0 / totalPages);
            document.querySelector('.progress-bar-fill').style.width = progressPercent.toFixed(2) + '%';

            const newUrl = readBaseUrl + '?id=' + mangaId +
                '&capituloNumero=' + currentChapterNum +
                '&pagina=' + currentPage;
            history.replaceState(null, '', newUrl);
        }

        // ===== ZOOM & PAN SYSTEM =====
        const img = document.getElementById('mangaImage');
        const viewer = document.getElementById('imageViewer');
        const zoomIndicator = document.getElementById('zoomIndicator');

        let scale = 1;
        let panX = 0;
        let panY = 0;
        const MIN_SCALE = 1;
        const MAX_SCALE = 5;

        // Drag state (mouse)
        let isDragging = false;
        let dragStartX = 0;
        let dragStartY = 0;
        let dragStartPanX = 0;
        let dragStartPanY = 0;

        // Touch state
        let lastTouchDist = 0;
        let lastTouchMidX = 0;
        let lastTouchMidY = 0;
        let touchDragging = false;
        let touchStartX = 0;
        let touchStartY = 0;
        let touchStartPanX = 0;
        let touchStartPanY = 0;
        let touchMoved = false;

        // Double-tap detection
        let lastTapTime = 0;

        let zoomIndicatorTimeout;

        const zoomSlider = document.getElementById('zoomSlider');
        const zoomLevelText = document.getElementById('zoomLevelText');

        function getZoomTarget() {
            return readingMode === 'single' ? img : dualContainer;
        }

        function getImageLayout() {
            const viewerRect = viewer.getBoundingClientRect();
            const viewerW = viewerRect.width;
            const viewerH = viewerRect.height;

            if (readingMode !== 'single' && dualContainer.style.display !== 'none') {
                // Dual mode: calculate the actual rendered area of both images combined
                const leftRect = imgLeft.getBoundingClientRect();
                const rightVisible = imgRight.style.display !== 'none';
                const rightRect = rightVisible ? imgRight.getBoundingClientRect() : null;

                // Total content area (both images side by side)
                const contentLeft = leftRect.left;
                const contentRight = rightVisible ? rightRect.right : leftRect.right;
                const contentTop = Math.min(leftRect.top, rightVisible ? rightRect.top : leftRect.top);
                const contentBottom = Math.max(leftRect.bottom, rightVisible ? rightRect.bottom : leftRect.bottom);

                const displayW = (contentRight - contentLeft) / scale;
                const displayH = (contentBottom - contentTop) / scale;
                const offsetX = (contentLeft - viewerRect.left - panX) / scale;
                const offsetY = (contentTop - viewerRect.top - panY) / scale;

                return { viewerW, viewerH, displayW, displayH, offsetX, offsetY };
            }

            const imgW = img.naturalWidth || img.offsetWidth;
            const imgH = img.naturalHeight || img.offsetHeight;
            const ratio = Math.min(viewerW / imgW, viewerH / imgH);
            const displayW = imgW * ratio;
            const displayH = imgH * ratio;
            // Flexbox centering offset
            const offsetX = (viewerW - displayW) / 2;
            const offsetY = (viewerH - displayH) / 2;
            return { viewerW, viewerH, displayW, displayH, offsetX, offsetY };
        }

        function applyTransform() {
            const target = getZoomTarget();
            target.style.transform = `translate(${panX}px, ${panY}px) scale(${scale})`;
            if (scale > 1) {
                target.classList.add('zoomed');
            } else {
                target.classList.remove('zoomed');
            }
        }

        function clampPan() {
            if (scale <= 1) {
                panX = 0;
                panY = 0;
                return;
            }
            const { viewerW, viewerH, displayW, displayH, offsetX, offsetY } = getImageLayout();
            const scaledW = displayW * scale;
            const scaledH = displayH * scale;

            // Image visual bounds: left = offsetX + panX, right = offsetX + panX + scaledW
            // Clamp so image doesn't leave empty space (or stays within viewer if smaller)
            const minPanX = Math.min(-offsetX, viewerW - offsetX - scaledW);
            const maxPanX = Math.max(-offsetX, viewerW - offsetX - scaledW);
            const minPanY = Math.min(-offsetY, viewerH - offsetY - scaledH);
            const maxPanY = Math.max(-offsetY, viewerH - offsetY - scaledH);

            panX = Math.max(minPanX, Math.min(maxPanX, panX));
            panY = Math.max(minPanY, Math.min(maxPanY, panY));
        }

        function updateZoomUI() {
            const pct = Math.round(scale * 100);
            zoomIndicator.textContent = pct + '%';
            zoomIndicator.classList.add('visible');
            clearTimeout(zoomIndicatorTimeout);
            zoomIndicatorTimeout = setTimeout(() => {
                zoomIndicator.classList.remove('visible');
            }, 1000);
            // Sync slider
            if (zoomSlider) zoomSlider.value = pct;
            if (zoomLevelText) zoomLevelText.textContent = pct + '%';
        }

        function showZoomLevel() {
            updateZoomUI();
        }

        function zoomTo(newScale, centerX, centerY) {
            const { viewerW, viewerH, offsetX, offsetY } = getImageLayout();
            const viewerRect = viewer.getBoundingClientRect();
            const cx = (centerX !== undefined) ? centerX - viewerRect.left : viewerW / 2;
            const cy = (centerY !== undefined) ? centerY - viewerRect.top : viewerH / 2;

            const oldScale = scale;
            scale = Math.max(MIN_SCALE, Math.min(MAX_SCALE, newScale));

            // Adjust pan so the point under the cursor stays fixed
            if (oldScale !== scale) {
                const factor = scale / oldScale;
                // Point in element-local coords: lx = (cx - offsetX - panX) / oldScale
                const relX = cx - offsetX - panX;
                const relY = cy - offsetY - panY;
                panX = cx - offsetX - factor * relX;
                panY = cy - offsetY - factor * relY;
            }

            clampPan();
            applyTransform();
            updateZoomUI();
        }

        function resetZoom() {
            scale = 1;
            panX = 0;
            panY = 0;
            // Clear transform on both targets
            img.style.transform = '';
            img.classList.remove('zoomed');
            dualContainer.style.transform = '';
            dualContainer.classList.remove('zoomed');
            applyTransform();
            updateZoomUI();
        }

        function zoomIn() {
            zoomTo(scale + 0.25);
        }

        function zoomOut() {
            zoomTo(scale - 0.25);
        }

        function onZoomSlider(value) {
            zoomTo(parseInt(value) / 100);
        }

        // --- Mouse wheel zoom ---
        viewer.addEventListener('wheel', function(e) {
            e.preventDefault();
            const delta = e.deltaY > 0 ? -0.15 : 0.15;
            zoomTo(scale + delta * scale, e.clientX, e.clientY);
        }, { passive: false });

        // --- Mouse double-click to toggle zoom ---
        viewer.addEventListener('dblclick', function(e) {
            if (e.target.closest('.zoom-controls') || e.target.closest('.nav-arrow') || e.target.closest('.reading-mode-wrapper')) return;
            e.preventDefault();
            if (scale > 1) {
                resetZoom();
                showZoomLevel();
            } else {
                zoomTo(2.5, e.clientX, e.clientY);
            }
        });

        // --- Mouse drag to pan ---
        viewer.addEventListener('mousedown', function(e) {
            if (e.target.closest('.zoom-controls') || e.target.closest('.nav-arrow') || e.target.closest('.reading-mode-wrapper')) return;
            if (scale <= 1) return;
            e.preventDefault();
            isDragging = true;
            dragStartX = e.clientX;
            dragStartY = e.clientY;
            dragStartPanX = panX;
            dragStartPanY = panY;
            getZoomTarget().classList.add('dragging');
        });

        document.addEventListener('mousemove', function(e) {
            if (!isDragging) return;
            panX = dragStartPanX + (e.clientX - dragStartX);
            panY = dragStartPanY + (e.clientY - dragStartY);
            clampPan();
            applyTransform();
        });

        document.addEventListener('mouseup', function() {
            if (isDragging) {
                isDragging = false;
                getZoomTarget().classList.remove('dragging');
            }
        });

        // --- Touch: pinch-to-zoom + drag to pan + double-tap ---
        function getTouchDist(touches) {
            const dx = touches[0].clientX - touches[1].clientX;
            const dy = touches[0].clientY - touches[1].clientY;
            return Math.sqrt(dx * dx + dy * dy);
        }

        function getTouchMid(touches) {
            return {
                x: (touches[0].clientX + touches[1].clientX) / 2,
                y: (touches[0].clientY + touches[1].clientY) / 2
            };
        }

        viewer.addEventListener('touchstart', function(e) {
            if (e.touches.length === 2) {
                // Pinch start
                e.preventDefault();
                lastTouchDist = getTouchDist(e.touches);
                const mid = getTouchMid(e.touches);
                lastTouchMidX = mid.x;
                lastTouchMidY = mid.y;
                touchDragging = false;
            } else if (e.touches.length === 1) {
                touchMoved = false;
                const touch = e.touches[0];

                // Double-tap detection (desktop/tablet only, not mobile)
                const now = Date.now();
                if (!isMobile() && now - lastTapTime < 300) {
                    e.preventDefault();
                    if (scale > 1) {
                        resetZoom();
                        showZoomLevel();
                    } else {
                        zoomTo(2.5, touch.clientX, touch.clientY);
                    }
                    lastTapTime = 0;
                    return;
                }
                lastTapTime = now;

                // Single touch drag (when zoomed)
                if (scale > 1) {
                    e.preventDefault();
                    touchDragging = true;
                    touchStartX = touch.clientX;
                    touchStartY = touch.clientY;
                    touchStartPanX = panX;
                    touchStartPanY = panY;
                    getZoomTarget().classList.add('dragging');
                }
            }
        }, { passive: false });

        viewer.addEventListener('touchmove', function(e) {
            if (e.touches.length === 2) {
                // Pinch zoom
                e.preventDefault();
                const dist = getTouchDist(e.touches);
                const mid = getTouchMid(e.touches);
                const factor = dist / lastTouchDist;

                zoomTo(scale * factor, mid.x, mid.y);

                // Also pan with the midpoint movement
                panX += mid.x - lastTouchMidX;
                panY += mid.y - lastTouchMidY;
                clampPan();
                applyTransform();

                lastTouchDist = dist;
                lastTouchMidX = mid.x;
                lastTouchMidY = mid.y;
            } else if (e.touches.length === 1 && touchDragging) {
                // Single finger pan (when zoomed)
                e.preventDefault();
                const touch = e.touches[0];
                const dx = touch.clientX - touchStartX;
                const dy = touch.clientY - touchStartY;
                if (Math.abs(dx) > 5 || Math.abs(dy) > 5) touchMoved = true;
                panX = touchStartPanX + dx;
                panY = touchStartPanY + dy;
                clampPan();
                applyTransform();
            }
        }, { passive: false });

        viewer.addEventListener('touchend', function(e) {
            if (e.touches.length < 2) {
                lastTouchDist = 0;
            }
            if (e.touches.length === 0) {
                touchDragging = false;
                getZoomTarget().classList.remove('dragging');
            }
        });

        // ===== KEYBOARD NAVIGATION =====
        document.addEventListener('keydown', function(e) {
            const modal = document.getElementById('chapterModal');
            if (modal.classList.contains('active')) {
                if (e.key === 'Escape') {
                    closeChapterModal();
                } else if (e.key === 'Enter') {
                    chapterModalNavigate();
                }
                return;
            }

            if (e.key === 'ArrowLeft') {
                previousPage();
            } else if (e.key === 'ArrowRight') {
                nextPage();
            } else if (e.key === 'Escape') {
                if (scale > 1) {
                    resetZoom();
                    showZoomLevel();
                } else {
                    window.location.href = '@Url.Action("Details", "Manga", new { id = ViewBag.MangaId })';
                }
            } else if (e.key === 'f' || e.key === 'F') {
                toggleFullscreen();
            } else if (e.key === '+' || e.key === '=') {
                zoomTo(scale + 0.25);
            } else if (e.key === '-') {
                zoomTo(scale - 0.25);
            } else if (e.key === '0') {
                resetZoom();
                showZoomLevel();
            }
        });

        // ===== PAGE NAVIGATION =====
        function previousPage() {
            if (scale > 1) { resetZoom(); }
            const step = getPageStep();
            if (currentPage > 1) {
                const targetPage = Math.max(1, currentPage - step);
                navigateToPage(targetPage);
            } else if (hasPrevChapter) {
                showChapterModal('prev');
            }
        }

        function nextPage() {
            if (scale > 1) { resetZoom(); }
            const step = getPageStep();
            // In dual mode, check if we're past the last viewable pair
            const effectiveEnd = readingMode === 'single' ? currentPage : currentPage + (currentPage + 1 <= totalPages ? 1 : 0);
            if (effectiveEnd < totalPages) {
                navigateToPage(currentPage + step);
            } else if (hasNextChapter) {
                showChapterModal('next');
            }
        }

        function jumpToPage(pageNum) {
            const page = parseInt(pageNum);
            navigateToPage(readingMode !== 'single' ? getAlignedPage(page) : page);
        }

        function onProgressBarClick(e) {
            const bar = e.currentTarget;
            const rect = bar.getBoundingClientRect();
            const clickX = e.clientX - rect.left;
            const percent = clickX / rect.width;
            const targetPage = Math.max(1, Math.min(totalPages, Math.round(percent * totalPages)));
            jumpToPage(targetPage);
        }

        function changeChapter(capituloNumero) {
            showLoading();
            window.location.href = '@Url.Action("Read", "Manga")?id=' + mangaId +
                '&capituloNumero=' + capituloNumero +
                '&pagina=1';
        }

        function navigateToPage(pageNum) {
            const pageInfo = pageMap.find(p => p.pagina === pageNum);
            if (!pageInfo) return;

            // Reset zoom
            if (scale > 1) resetZoom();

            // Update current page
            currentPage = pageNum;

            if (readingMode !== 'single') {
                updateDualPageDisplay();
            } else {
                // Show loading spinner (hidden by img onload)
                showLoading();

                // Swap image source (triggers onload -> hideLoading)
                img.src = pageInfo.imagem;
                img.alt = 'Page ' + pageNum;

                updatePageUI();
            }

            // Preload adjacent pages
            preloadAdjacentPages();
        }

        // ===== CHAPTER TRANSITION MODAL =====
        function showChapterModal(direction) {
            pendingChapterNav = direction;
            const modal = document.getElementById('chapterModal');
            const title = document.getElementById('chapterModalTitle');
            const text = document.getElementById('chapterModalText');
            const actionBtn = document.getElementById('chapterModalAction');

            if (direction === 'next') {
                title.textContent = 'End of ' + currentChapterName;
                text.textContent = 'Continue to ' + nextChapterName + '?';
                actionBtn.textContent = 'Next Chapter';
            } else {
                title.textContent = 'Start of ' + currentChapterName;
                text.textContent = 'Go back to ' + prevChapterName + '?';
                actionBtn.textContent = 'Previous Chapter';
            }

            modal.classList.add('active');
        }

        function closeChapterModal() {
            document.getElementById('chapterModal').classList.remove('active');
            pendingChapterNav = null;
        }

        function chapterModalNavigate() {
            if (pendingChapterNav === 'next') {
                showLoading();
                window.location.href = '@Url.Action("Read", "Manga")?id=' + mangaId +
                    '&capituloNumero=' + nextChapterNum +
                    '&pagina=1';
            } else if (pendingChapterNav === 'prev') {
                showLoading();
                window.location.href = '@Url.Action("Read", "Manga")?id=' + mangaId +
                    '&capituloNumero=' + prevChapterNum +
                    '&pagina=last';
            }
        }

        // ===== UTILITIES =====
        function toggleFullscreen() {
            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen().catch(() => {});
                document.querySelector('.reader-container').classList.add('is-fullscreen');
            } else {
                document.exitFullscreen();
                document.querySelector('.reader-container').classList.remove('is-fullscreen');
            }
        }

        document.addEventListener('fullscreenchange', function() {
            if (!document.fullscreenElement) {
                document.querySelector('.reader-container').classList.remove('is-fullscreen');
                // Show controls when exiting fullscreen
                clearTimeout(hideTimeout);
                showControls();
            }
        });

        function showLoading() {
            document.getElementById('loadingSpinner').style.display = 'block';
        }

        function hideLoading() {
            document.getElementById('loadingSpinner').style.display = 'none';
        }

        // Auto-hide controls on mouse inactivity (only in fullscreen)
        let hideTimeout;
        let isMouseMoving = false;

        function isFullscreen() {
            return !!document.fullscreenElement;
        }

        function showControls() {
            document.getElementById('readerHeader').classList.remove('hidden');
            document.getElementById('readerFooter').classList.remove('hidden');
            document.getElementById('zoomControls').classList.add('visible');
            document.getElementById('readingModeControls').classList.add('visible');
        }

        function hideControls() {
            if (!isMouseMoving && isFullscreen()) {
                document.getElementById('readerHeader').classList.add('hidden');
                document.getElementById('readerFooter').classList.add('hidden');
                document.getElementById('zoomControls').classList.remove('visible');
                // Keep reading mode controls visible on mobile
                if (!isMobile()) {
                    document.getElementById('readingModeControls').classList.remove('visible');
                }
            }
        }

        document.addEventListener('mousemove', function() {
            isMouseMoving = true;
            showControls();
            clearTimeout(hideTimeout);
            if (isFullscreen()) {
                hideTimeout = setTimeout(function() {
                    isMouseMoving = false;
                    hideControls();
                }, 3000);
            }
        });

        // ===== MOBILE: SWIPE & TAP NAVIGATION =====

        let swipeStartX = 0;
        let swipeStartY = 0;
        let swipeStartTime = 0;
        let swipeMoved = false;

        viewer.addEventListener('touchstart', function(e) {
            if (!isMobile() || e.touches.length !== 1 || scale > 1) return;
            swipeStartX = e.touches[0].clientX;
            swipeStartY = e.touches[0].clientY;
            swipeStartTime = Date.now();
            swipeMoved = false;
        }, { passive: true });

        viewer.addEventListener('touchmove', function(e) {
            if (!isMobile() || scale > 1) return;
            const dx = Math.abs(e.touches[0].clientX - swipeStartX);
            const dy = Math.abs(e.touches[0].clientY - swipeStartY);
            if (dx > 10 || dy > 10) swipeMoved = true;
        }, { passive: true });

        viewer.addEventListener('touchend', function(e) {
            if (!isMobile() || scale > 1) return;

            const endX = e.changedTouches[0].clientX;
            const endY = e.changedTouches[0].clientY;
            const dx = endX - swipeStartX;
            const dy = endY - swipeStartY;
            const elapsed = Date.now() - swipeStartTime;

            // Swipe detection: horizontal > 50px, faster than 300ms, more horizontal than vertical
            if (Math.abs(dx) > 50 && Math.abs(dx) > Math.abs(dy) * 1.5 && elapsed < 400) {
                if (dx < 0) {
                    nextPage();
                } else {
                    previousPage();
                }
                return;
            }

            // Tap detection: no significant movement, short press
            if (!swipeMoved && elapsed < 300) {
                const viewerRect = viewer.getBoundingClientRect();
                const tapX = endX - viewerRect.left;
                const viewerWidth = viewerRect.width;

                // Tap right half = next, left half = previous
                if (tapX > viewerWidth * 0.5) {
                    nextPage();
                } else {
                    previousPage();
                }
            }
        }, { passive: true });

        // Preload adjacent page images for faster client-side navigation
        function preloadAdjacentPages() {
            const step = getPageStep();
            // Preload next pages
            for (let i = 1; i <= step + 1; i++) {
                const p = currentPage + i;
                if (p <= totalPages) {
                    const info = pageMap.find(pg => pg.pagina === p);
                    if (info) { const pre = new Image(); pre.src = info.imagem; }
                }
            }
            // Preload previous pages
            for (let i = 1; i <= step; i++) {
                const p = currentPage - i;
                if (p >= 1) {
                    const info = pageMap.find(pg => pg.pagina === p);
                    if (info) { const pre = new Image(); pre.src = info.imagem; }
                }
            }
        }

        // Initialize reading mode from localStorage
        function initReadingMode() {
            // On mobile, move reading mode controls into the header-right (replaces hidden fullscreen btn)
            if (isMobile()) {
                const rmControls = document.getElementById('readingModeControls');
                const headerRight = document.querySelector('.header-right');
                if (rmControls && headerRight) {
                    headerRight.appendChild(rmControls);
                }
            }

            if (readingMode !== 'single') {
                // Highlight the correct option
                document.querySelectorAll('.reading-mode-option').forEach(opt => {
                    opt.classList.toggle('active', opt.dataset.mode === readingMode);
                });
                updateDualPageDisplay();
            }
        }

        initReadingMode();
        // Initial preload
        preloadAdjacentPages();
    </script>
