                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <rect x="1" y="2" width="6" height="12" rx="1" ry="1" stroke="currentColor" fill="none" stroke-width="1"/>
                                <rect x="9" y="2" width="6" height="12" rx="1" ry="1" stroke="currentColor" fill="none" stroke-width="1"/>
